{%- for part in parts -%}
  {%- if loop.first -%}
    <h1 {%- autoescape false -%}
{{- attributes_string -}}
{%- endautoescape -%}>
      {%- autoescape false -%}
        {{- part -}}
      {%- endautoescape -%}
    </h1>
  {%- else -%}
    <p>
      {%- autoescape false -%}
        {{- part -}}
      {%- endautoescape -%}
    </p>
  {%- endif -%}
{%- endfor -%}
