{%- for part in parts -%}
  {%- if loop.first -%}
    <h2
      {%- for attribute in attributes -%}
        {{- attribute -}}
      {%- endfor -%}
    >
      {%- autoescape false -%}
        {{- part -}}
      {%- endautoescape -%}
    </h2>
  {%- else -%}
    <p>
      {%- autoescape false -%}
        {{- part -}}
      {%- endautoescape -%}
    </p>
  {%- endif -%}
{%- endfor -%}
