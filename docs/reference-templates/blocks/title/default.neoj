[!- import "macros/loader.neoj" as macros -!] 

[!- for block in block.children -!]
  [!- if loop.first -!]
    <h1
      [@ macros.get_block_attributes(block, "title") @]
>[!- include "blocks/" + block.category + "/no-paragraphs.neoj" -!]</h1>
  [!- else -!]
    [!- include "blocks/" + block.category + "/default.neoj" -!]
  [!- endif -!]
[!- endfor -!]
