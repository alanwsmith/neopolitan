{%- from "text.jinja" import text -%}
{%- macro subtitle(data) -%}
{%- for block in data.children -%}
{%- if loop.first -%}
<div

{%- if data.attributes != None -%}
  {{- " " -}}
  class="subtitle
  {%- for attribute in data.attributes -%}
    {%- if attribute.key == "class" %} 
      {{- " " -}}
      {{- attribute.value -}}
    {%- endif -%}
  {%- endfor -%}
  "
{%- else -%}
  {{- " " -}}
  class="subtitle"
{%- endif -%}

{%- for attribute in data.attributes -%}
  {%- if attribute.key != "class" %} 
  {{- " " -}}
      {{- attribute.key -}}="
      {{- attribute.value -}}"
  {%- endif -%}
{%- endfor -%}
>
  <p>{{ text(block) }}</p>
</div>
{% else %}
<p>{{ text(block) }}</p>
{%- endif -%}
{%- endfor -%}
{%- endmacro -%}
