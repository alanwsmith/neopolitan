#[cfg(test)]
mod test {
    use super::*;
    use pretty_assertions::assert_eq;
    use rstest::rstest;
    use crate::span_attr::span_attr_key_token;

    #[rstest]
    #[case("alfa: bravo``", "`", ("bravo``", "alfa".to_string()))]
    fn solo_span_flag_valid_tests(
        #[case] source: &str,
        #[case] character: &str,
        #[case] left: (&str, String),
    ) {
        let right = span_attr_key_token(source, character).unwrap();
        assert_eq!(left, right);
    }

}
