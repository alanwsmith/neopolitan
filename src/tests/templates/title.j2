{%- for part in parts -%}
  {%- if loop.first -%}
    <h1 class="title
      {%- for attribute in attributes -%}
        {%- if attribute.key == "class" -%}
          {{- " " -}}
          {{ attribute.value }}
        {%- endif -%}
      {%- endfor -%}
    "
      {%- for attribute in attributes -%}
        {%- if attribute.key != "class" -%}
          {{- " " -}}
          {{attribute.key}}="{{attribute.value}}"
        {%- endif -%}
      {%- endfor -%}
    >
{% autoescape false %}
      {{- part -}}
{% endautoescape %}
    </h1>
  {%- else -%}
    <p>
{% autoescape false %}
      {{- part -}}
{% endautoescape %}
    </p>
  {%- endif -%}
{%- endfor -%}
