{%- for child in children -%}
  {%- if loop.first -%}
    <h1 class="title
      {%- for attribute in attributes -%}
        {%- if attribute.key == "class" -%}
          {{- " " -}}
          {{ attribute.value }}
        {%- endif -%}
      {%- endfor -%}
    "
      {%- for attribute in attributes -%}
        {%- if attribute.key != "class" -%}
          {{- " " -}}
          {{attribute.key}}="{{attribute.value}}"
        {%- endif -%}
      {%- endfor -%}
    >
      {%- for snippet in child.snippets -%} 
        {{ snippet.text }}
      {%- endfor -%}
    </h1>
  {%- else -%}
    <p>
      {%- for snippet in child.snippets -%} 
        {{ snippet.text }}
      {%- endfor -%}
    </p>
  {%- endif -%}
{%- endfor -%}
